<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @customers.last_name %>　<%= @customers.first_name %>さんの会員詳細</h4>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</td>
            <td><%= @customers.id %></td>
          </tr>
          <tr>
            <th>氏名</td>
            <td><%= @customers.last_name %>　<%= @customers.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customers.last_name_kana %>　<%= @customers.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customers.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customers.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customers.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customers.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <% if @customers.is_deleted %>
            <th class='text-success  font-weight-bold'><%= "退会" %></th>
            <% else %>
            <th class='text-muted font-weight-block'><%= "有効" %></th>
            <% end %>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
            <%= link_to "注文履歴一覧を見る", "#", class:"btn btn-primary" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>