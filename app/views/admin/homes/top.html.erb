<div class="container mt-5 pb-5">
  <div class="col-md-12">
    <h4 class="text-center">注文履歴一覧</h4>

    <table class="table text-center">
  　　<thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="text-center">
              <!--購入日時-->
            <td>
              <%= link_to admin_order_path(order) do %>
                <%=  order.created_at.in_time_zone('Asia/Tokyo').strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
              <!--購入者名-->
            <td class="align-middle"><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <!--注文個数-->
            <td class="align-middle"><%= order.order_details.sum(:amount) %></td>
              <!--注文ステータス-->
            <td class="align-middle"><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>