<div class="container mt-5 pb-5">
  <div class="form-group text-center">

      <h3>ジャンル一覧・追加</h3>

      <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
      <table class= 'mx-auto mt-5 mb-5'>
        <tr>
      <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
      <td><%= f.text_field :name, class: "mr-5" %></td>
      <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>
      </tr>
      </table>
      <% end %>

      <table class='table boder-bottom mt-3'>

          <h3>ジャンル</h3>

        <thead>
         <% @genres.each do |genre| %>
        <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
        </tr>
        <%end%>
        </thead>
      </table>
   <div class="row">
     <div class="mx-auto mb-5">
      <%= paginate @genres %>
    </div>
</div>
  </div>
</div>