<div class="container my-5">
  
  <div class="row ml-5 text-center">
    <h3 class="col-12 mb-3">管理者ログイン</h3>
　</div>　　
　　
　
　<div class="col-12 registrations">　　　
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field row justify-content-center mt-2">
    <label class="col-2">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: 'col-5'  %>
  </div>

  <div class="field row justify-content-center mt-2">
    <label class="col-2">パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password", class: 'col-5' %>
  </div>

　<div class="field row justify-content-center mt-2">　
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
　</div>
　
  <div class="actions text-center row" >
    <%= f.submit "ログイン",class: "btn btn-sm btn-primary px-5 mx-auto d-block" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>
</div>