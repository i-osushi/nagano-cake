<div class="container mt-5 pb-5">
  <div class="form-group text-center">
    <h2 class="mb-3 ml-5">商品編集</h2>

    <%= form_with model: [:admin, @item] do |f| %>
  <div class="form-group row mt-5">
    <%= f.label :image, "商品画像", class: "col-4 col-form-label" %>
    <%= f.file_field :image, class: "btn" %>
  </div>
  <div class="form-group row">
    <%= f.label :name, "商品名", class: "col-4 col-form-label" %>
    <%= f.text_field :name, class: "col-7 form-control", placeholder: "商品名" %>
  </div>
  <div class="form-group row">
    <%= f.label :introduction, "商品説明", class: "col-4 col-form-label" %>
    <%= f.text_area :introduction, class: "col-7 form-control", placeholder: "ここに説明文を記述します" %>
  </div>
  <div class="form-group row">
    <%= f.label :genre, "ジャンル", class: "col-4 col-form-label" %>
    <%= f.select :genre_id, @genres,{},{class: "form-select"} %>
  </div>
  <div class="form-group row">
    <%= f.label :price, "税抜価格", class: "col-4 col-form-label" %>
    <%= f.text_field :price, class: "col-7 form-control", placeholder: "1000" %>円
  </div>
  <div class="form-group row">
    <%= f.label :is_active, "販売ステータス", class: "col-4 col-form-label" %>
    <div class="col-7 pl-0">
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>&emsp;
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
    </div>
  </div>
  <div class="form-group text-center">
    <% if request.path_info == new_admin_item_path %>
      <%= f.submit "新規登録", class: "btn btn-base px-4 py-2" %>
    <% else %>
      <%= f.submit "変更を保存", class: "btn btn-base px-4 py-2" %>
    <% end %>
  </div>
<% end %>