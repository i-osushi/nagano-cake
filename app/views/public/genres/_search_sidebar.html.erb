<!--ジャンル検索サイドバー-->
<table class="genre-table" >
  <thead class="genre-table-title1">
    <tr>
      <th class="genre-table-title2">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
  <% genres.each do |genre| %>
    <tr>
      <td class="genre-table-item"><%= link_to genre.name, genre_path(genre.id) ,style: "color: black;" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

