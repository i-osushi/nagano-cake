<div class="container my-5">

  <div class="row px-4">
    <h4 class="col-12 mb-5 font-weight-bold">新規会員登録</h4>
  </div>

  <div class="col-12 registrations">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

    <div class="field row mt-2">
      <label class="col-3">名前</label>
        <%= f.label :（姓） , class: 'col-1' %>
        <%= f.text_field :last_name, autofocus: true, placeholder: '令和' %>

        <%= f.label :（名） , class: 'col-1' %>
        <%= f.text_field :first_name, placeholder: '道子' %>
    </div>

    <div class="field row mt-2">
      <label class="col-3">フリガナ</label>
        <%= f.label :（ｾｲ）, class: 'col-1' %>
        <%= f.text_field :last_name_kana, placeholder: 'レイワ' %>

        <%= f.label :（ﾒｲ）, class: 'col-1' %>
        <%= f.text_field :first_name_kana, placeholder: 'ミチコ' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">メールアドレス </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">郵便番号（ハイフンなし）</label>
        <%= f.text_field :postal_code, placeholder: '0000000' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">住所</label>
        <%= f.text_field :address, class: 'col-6', placeholder: '東京都渋谷区代々木神園町0-0' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">電話番号（ハイフンなし）</label>
        <%= f.text_field :telephone_number, placeholder: '00000000000' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">
        パスワード
       <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
       <% end %>
      </label>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">パスワード（確認用）</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions row mt-3">
      <div class="col-4"> </div>
       <%= f.submit "新規登録",class: "btn btn-sm btn-success px-5" %>
    </div>
  <% end %>

  </div>
    <h4 class="col-12 px-4 mt-4 font-weight-bold">既に登録済みの方</h4>
      <div class="ml-5 mt-2">
      <p><%= render "public/shared/links" %>からログインしてください。</P>
      </div>
  </div>

</div>