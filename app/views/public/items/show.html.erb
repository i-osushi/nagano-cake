<!--商品詳細(顧客）-->
<div class="row">

	
	<div class="col-xs-5">
		<p class="item-content1"><%= image_tag @item.get_image(300, 300), class: "rounded-bottom" %></p>
	</div>

	<div class="col-xs-5">
		<%= form_with model: @item do |f| %>
		<h3><%= @item.name %></h3>
		<p><%= @item.introduction %></p>

	</div>
</div>

<div class="row">
	<div class="col-xs-2">
	</div>
	<div class="col-xs-5">

			<p class="item-content2", style="font-family: arial black">¥ <%= @item.price.to_s(:delimited) %> (税込)
				<span>　　</span><%= f.select :amount, *[1..10], {:prompt => "個数選択"} %></p>
		</div>

		<div class="col-xs-5">
		  <p><%= f.submit "カートに入れる", class:"btn btn-primary" %></p>
		</div>
		<% end %>
	</div>
</div