<!--商品一覧（顧客）-->
<div class="container">
  <div class="row pt-3 col-12">
    <div class="col-3 mt-3"><%= render "public/genres/search_sidebar", genres: @genres %></div>
  
	<div class="col-9">
	  <h2 >商品一覧(全<%= @items.count %>件)</h2>
	    <div class="row">
		  <% @items.each do |item| %>
		  <div class="col-3">
			<%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
			<div class="mt-1 mr-4">
			  <%= image_tag item.get_image(200, 200), class: "rounded" %>
			  <p><%= item.name %></p>
			  <p>¥<%= item.add_tax_price.to_s(:delimited) %></p>
			  <!--<p>¥<%#= item.price.to_s(:delimited) %></p>-->
			</div>
			<% end %>
		  </div>
		  <% end %>
	    </div>
	</div>
	<!--<div style="text-align: center;">%= paginate @items %</div>-->
  </div>
</div>
