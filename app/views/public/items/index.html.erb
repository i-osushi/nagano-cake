<!--商品一覧（顧客）-->
<div class="container">
  <div class="row pt-5">
    <div class="col-3 mt-3"><%= render "public/genres/search_sidebar", genres: @genres %></div>
  
	<div class="col-9 pt-3">
	  <h2 class="font-weight-bold">商品一覧(全<%= @items.count %>件)</h2>
	    <div class="row">
		  <% @items.each do |item| %>
		  <div class="col-3">
			<%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
			<div class="mt-3 mr-4">
			  <%= image_tag item.image, class: "rounded", size:"200x150", style: "object-fit: cover;" %>
			  <!--販売ステータス-->
			  <% if item.is_active == true %>
                <p class="text-success text-right">販売中</p>
              <% else %>
                <p class="text-secondary text-right">販売停止中</p>
              <% end %>
              <p><%= item.name %></p>
			  <p>¥<%= item.add_tax_price.to_s(:delimited) %>（税込）</p>
			</div>
			<% end %>
		  </div>
		  <% end %>
	    </div>
	</div>
	<!--<div style="text-align: center;">%= paginate @items %</div>-->
  </div>
</div>
