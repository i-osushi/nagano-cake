<h2>顧客の登録情報編集画面</h2>
<%#= form_with url: customers_information_edit_path do |f| %>
<%#= form_with model: @customer, url: customers_information_edit_path, local:true do |f| %>
<%= form_with model: @customer, url: customers_information_path, method: :patch, local:true do |f| %>
    <div class="field row mt-2">
      <label class="col-3">氏名</label>
        <%= f.label :（姓） , class: 'col-1' %>
        <%= f.text_field :last_name, autofocus: true %>

        <%= f.label :（名） , class: 'col-1' %>
        <%= f.text_field :first_name %>
    </div>

    <div class="field row mt-2">
      <label class="col-3">カナ</label>
        <%= f.label :（ｾｲ）, class: 'col-1' %>
        <%= f.text_field :last_name_kana %>

        <%= f.label :（ﾒｲ）, class: 'col-1' %>
        <%= f.text_field :first_name_kana %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">郵便番号（ハイフンなし）</label>
        <%= f.text_field :postal_code %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">住所</label>
        <%= f.text_field :address, class: 'col-6' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">電話番号（ハイフンなし）</label>
        <%= f.text_field :telephone_number %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">メールアドレス </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions row mt-3">
      <div class="col-4"> </div>
       <%= f.submit "変更を保存",class: "btn btn-sm btn-success px-5" %>
    </div>


<% end %>