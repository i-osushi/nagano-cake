<div class="container">
  <div class="mt-4">
    <h3 class="font-weight-bold">会員情報編集</h3>
    <!--エラーメッセージ-->
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <!--編集フォーム-->
    <div class="mt-5">
      <%= form_with model: @customer, url: customers_information_path, method: :patch, local:true do |f| %>
        <div class="field row mt-2">
          <label class="col-2">氏名</label>
            <%= f.label :（姓） , class: 'col-1' %>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.label :（名） , class: 'col-1' %>
            <%= f.text_field :first_name %>
        </div>

        <div class="field row mt-2">
          <label class="col-2">カナ</label>
            <%= f.label :（ｾｲ）, class: 'col-1' %>
            <%= f.text_field :last_name_kana %>
            <%= f.label :（ﾒｲ）, class: 'col-1' %>
            <%= f.text_field :first_name_kana %>
        </div>

        <div class="field row mt-2">
          <label class="col-3">郵便番号</label>
            <%= f.text_field :postal_code %>
        </div>

        <div class="field row mt-2">
          <label class="col-3">住所</label>
            <%= f.text_field :address, class: 'col-6' %>
        </div>

        <div class="field row mt-2">
          <label class="col-3">電話番号</label>
            <%= f.text_field :telephone_number %>
        </div>

        <div class="field row mt-2">
          <label class="col-3">メールアドレス </label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <!--編集内容を保存ボタン-->
        <div class="action row mt-3">
          <div class="col-3"></div>
          <div>
            <%= f.submit "編集内容を保存",class: "btn btn-sm btn-success px-5 font-weight-bold" %>
          </div>
        </div>
      <% end %>
    </div>
    <!--退会ボタン-->
    <div class="actions row mt-5">
      <div class="col-7"></div>
      <div>
        <%= link_to "退会する", customers_confirm_withdraw_path, class: "btn btn-sm btn-danger px-5" %>
      </div>  
    </div>
    
  </div>
</div>

