<div class="container">
  <div class="mt-4">
    <h3 class="font-weight-bold">マイページ</h3>
      <div class="mt-4">
        <span class="font-weight-bold">登録情報</span>
        <%= link_to "編集する", customers_information_edit_path, class: "pull-right btn  btn-sm btn-success col-2 mx-3 font-weight-bold" %>
      </div>
      <!--登録情報テーブル-->
      <table class="teble table-bordered px-2 col-8 mt-3">
        <tr>
          <th class="col-3 table-active py-2">氏名</th>
          <td class="pl-1"><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="col-3 table-active py-2">カナ</th>
          <td class="pl-1"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="col-3 table-active py-2">郵便番号</th>
          <td class="pl-1"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="col-3 table-active py-2">住所</th>
          <td class="pl-1"><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="col-3 table-active py-2">電話番号</th>
          <td class="pl-1"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="col-3 table-active py-2">メールアドレス</th>
          <td class="pl-1"><%= @customer. email%></td>
        </tr>
      </table>
 
      <div class="mt-4 row">
        <div class="col-2 font-weight-bold">配送先　</div>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary px-5 font-weight-bold" %>
      </div>
      <div class="mt-3 row">
        <div class="col-2 font-weight-bold">注文履歴</div>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary px-5 font-weight-bold" %>
      </div>
  </div>
</div>