<div class="row">
  <div class="col-10">
    <strong class="information-link"><h3>マイページ</h3></strong>
      <div>
        <span>登録情報</span>
        <!--マイページ編集ボタンを入れる-->
        <%= link_to "編集する", customers_information_edit_path, class: "pull-right btn  btn-sm btn-success" %>
      </div>

      <table class="teble table-bordered col-xs-10 table-hover">
        <tr>
          <th class="col-xs-3">氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="col-xs-3">カナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="col-xs-3">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="col-xs-3">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="col-xs-3">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="col-xs-3">メールアドレス</th>
          <td><%= @customer. email%></td>
        </tr>

      </table>
      
      <div>
        <span>配送先</span>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary px-5" %>
      </div>
      <div>
        <span>注文履歴</span>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary px-5" %>
      </div>
  </div>
</div>