<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5">
      <h4 class="bg-black">配送先登録/一覧</h4>
      <%= form_with model: @address, local:true do |f| %>
  <div class="form-group">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, class: 'form-control', placeholder: "000000" %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, class: 'form-control ', placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control ', placeholder: "令和道子" %>
  </div>
  <% end %>
  <%= link_to "新規登録", addresses_path, method: :post, class: "btn btn-sm btn-success float-end" %>
    </div>
  </div>
</div>

<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5">
<table class="table table-active table-bordered " >
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  <% @addresses.each do |addresses| %>
    <tr>
      <td><%= addresses.postal_code %></td>
      <td><%= addresses.address%></td>
      <td><%= addresses.name%></td>
      <td><%= link_to "編集する", edit_address_path(addresses.id), class: "btn btn-sm btn-success float-end" %>
          <%= link_to "削除する", address_path(addresses.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger float-end" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>