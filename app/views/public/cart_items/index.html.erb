<!--カート内商品一覧画面-->
<div class="row">
  <div class="col-xs-12">
    <div>
      <strong class="information-link"><h3>ショッピングカート</h3></strong>
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :DELETE, class: "pull-right btn btn-danger" %>
    </div>

      <table class="table table-hover table-bordered col-xs-10" >
        <thead>
          <tr class="info">
            <th class="col-xs-3">商品名</th>
            <th class="col-xs-2">単価（税込）</th>
            <th class="col-xs-1">数量</th>
            <th class="col-xs-1">小計</th>
            <th class="col-xs-1"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="col-xs-3"><%= image_tag cart_item.item.get_image(100, 100) %><%= cart_item.item.name %></td>
            <td class="col-xs-2">¥<%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td class="col-xs-1">
                <%#= form_with model: @cart_item do |f| %>
                <%= form_with(model: cart_item, url: cart_item_path(cart_item)) do |f| %>
                  <p>
                    <%= f.number_field :amount, min:1, max:100 %>
                    <%= f.submit "変更", class: "btn btn-primary" %>
                  </p>
                <% end %>
            </td>
            <td class="col-xs-1">
                ¥<%#= ((cart_item.item.add_tax_price * cart_item.amount * 1.1).floor).to_s(:delimited, delimiter: ',') %>
                <%= cart_item.subtotal.to_s(:delimited) %>
            </td>
            <td class="col-xs-1">
                <%= link_to "削除する", cart_item_path(cart_item), method: :DELETE, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <table class="table table-hover table-bordered col-xs-10" >
        <!--<thead>-->
          <tr>
            <th class="col-xs-1">合計金額</th>
            <td class="col-xs-3">¥<%= @total %></td>
          </tr>
        <!--</thead>-->
        <!--<tbody>-->
          <!--<tr>-->

          <!--</tr>-->
        <!--</tbody>-->
      </table>

    <div class="col-xs-8">
      <span>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary", data: {"turbolinks" => false} %>
      </span>
    </div>

    <div class="col-xs-8">
      <span>
        <%= link_to "情報入力に進む", new_order_path, class: "col-xs-12 btn btn-success"%>
      </span>
    </div>
  </div>
</div>

