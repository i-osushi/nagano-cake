<div class="container mt-5 md-2">
  <h4>注文履歴一覧</h4>
  <div class="row ">
    <table class="table order_table table-bordered">
      <thead class="table-danger">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |orders| %>
        <tr>
          <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
          <td>〒<%= orders.postal_code %><br>
                <%= orders.address %><br>
                <%= orders.name %>
          </td>
          <td><% orders.order_details.each do |item| %>
          <%= item.item.name %><br>
          <% end %></td>
          <td><%= orders.total_payment %>円</td>
          <td><%= orders.status_i18n %></td>
          <td><%= link_to "表示する", order_path(orders.id), class: "btn btn-sm btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>